<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:text="Up and Down"
            android:textColor="#D5373737"
            android:textSize="50dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="▶︎ 숫자를 입력하세요 ◀\n1~100︎\n다시하기는 Error가 나오면 클릭"
            android:textColor="#D5373737"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/num"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="50dp"
            android:hint="숫 자 입 력 칸"
            android:textColorHint="#37434343"
            android:gravity="center" />
        <Button
            android:id="@+id/st"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="#56000000"
            android:layout_gravity="center"
            android:text="확인하기"
            android:textSize="40dp"
            android:textColor="#000000"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <Button
            android:id="@+id/re"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="#BEFFFFFF"
            android:layout_gravity="center"
            android:text="다시하기"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:background="#C19F9F9F"
                android:gravity="center"
                android:hint="답은?"
                android:textSize="70dp"
                android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
